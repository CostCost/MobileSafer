<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="#f8f8f8">
    <View
        android:layout_width="1dp"
        android:layout_alignParentLeft="true"
        android:background="@android:color/darker_gray"
        android:layout_height="match_parent">
    </View>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/text_brack_color"
        android:text="SIM卡变更后\n报警短信会发送给安全号码:"/>
    <EditText
        android:id="@+id/tab3_et"
        android:hint="请输入或选择安全号码"
        style="@style/myEditText"/>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/tab3_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:paddingLeft="15dp"
            android:textColor="@color/text_brack_color"
            android:text="选择联系人"/>
        <Button
            android:id="@+id/right_bt"
            android:alpha="0"
            android:clickable="false"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/tab3_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/right_bt"
            android:src="@drawable/selector_viewpager_tab3_iv_persons"/>

    </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/darker_gray"
        android:layout_height="match_parent">
    </View>
</RelativeLayout>
