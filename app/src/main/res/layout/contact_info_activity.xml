<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@color/textWrite"
              android:fitsSystemWindows="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        style="@style/activity_title_bar"
        android:background="@color/pictureblue"
        android:text="选择联系人"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ListView
        android:id="@+id/contact_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
        <RelativeLayout
            android:id="@+id/rl_pb"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/contact_pb"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
            <TextView
                android:layout_below="@id/contact_pb"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="正在加载联系人"/>
        </RelativeLayout>
    </FrameLayout>


</LinearLayout>