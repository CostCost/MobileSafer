<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="@color/textWrite"
              android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="添加黑名单号码"
        android:textSize="@dimen/soft_title_text_size"
        android:background="@color/titlegreen"
        android:textColor="@color/textWrite"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        >
        <EditText
            android:id="@+id/put_black_number"
            android:inputType="phone"
            android:hint="请输入或选择号码"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/textWrite"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/iv_sms_call_person"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:clickable="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/selector_viewpager_tab3_iv_persons"/>
    </RelativeLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#656965"
        ></View>
   <LinearLayout
       android:orientation="horizontal"
       android:layout_marginTop="10dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       >
       <CheckBox
           android:id="@+id/cb_abort_sms"
           android:layout_weight="1"
           android:layout_marginLeft="5dp"
           android:layout_width="wrap_content"
           android:layout_alignParentLeft="true"
           android:textColor="@color/text_brack_color"
           android:layout_height="wrap_content"
           android:text="短信拦截"/>

       <CheckBox
           android:id="@+id/cb_abort_phone"
           android:layout_weight="1"
           android:layout_toRightOf="@id/cb_abort_sms"
           android:layout_width="wrap_content"
           android:textColor="@color/text_brack_color"
           android:layout_height="wrap_content"
           android:text="电话拦截"/>

   </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="80dp"
            android:layout_marginLeft="10dp"
            android:textColor="@color/text_brack_color"
            android:layout_height="40dp"
            android:background="@android:color/darker_gray"
            android:text="取消"/>

        <Button
            android:alpha="0"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/bt_add_black_number"
            android:layout_width="80dp"
             android:layout_marginRight="10dp"
            android:clickable="true"
            android:background="@android:color/darker_gray"
            android:layout_alignParentRight="true"
            android:textColor="@color/text_brack_color"
            android:layout_height="40dp"
            android:text="确定"/>

   </LinearLayout>
</LinearLayout>
