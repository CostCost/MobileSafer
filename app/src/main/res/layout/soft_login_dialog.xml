<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:background="@color/textWrite"
              android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:text="@string/set_pwd"
        android:textSize="@dimen/soft_title_text_size"
        android:background="@color/pictureblue"
        android:textColor="@color/textWrite"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        >
        <TextView
            android:text="请设置密码："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/set_pwd_1"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/textWrite"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#656965"
        android:layout_marginTop="5dp"
        ></View>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="请再次输入："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/set_pwd_2"
            android:inputType="textPassword"
            android:background="@color/textWrite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#656965"
        ></View>
   <LinearLayout
       android:layout_marginTop="20dp"
       android:layout_marginBottom="7dp"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:paddingLeft="15dp"
       android:paddingRight="15dp">
       <Button
           android:id="@+id/bt_cancel"
           android:layout_width="80dp"
           android:textColor="@color/text_brack_color"
           android:layout_height="wrap_content"
           android:text="取消"/>
       <Button
           android:alpha="0"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="1.0" />
       <Button
           android:id="@+id/bt_commit"
           android:layout_width="80dp"
           android:textColor="@color/text_brack_color"
           android:layout_height="wrap_content"
           android:text="确定"/>
   </LinearLayout>
</LinearLayout>
