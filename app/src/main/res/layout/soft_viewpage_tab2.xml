<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
                android:background="#f8f8f8">
    <View
        android:layout_width="1dp"
        android:layout_alignParentLeft="true"
        android:background="@android:color/darker_gray"
        android:layout_height="match_parent">
    </View>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/text_brack_color"
        android:text="通过绑定SIM卡\n下次重启手机SIM卡发生变化\n就会发送报警短信："/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/tab2_bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:textColor="@color/text_brack_color"
            android:text="点击绑定SIM卡"/>
        <!--<Button-->
            <!--android:id="@+id/right_bt"-->
            <!--android:alpha="0"-->
            <!--android:clickable="false"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_width="10dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--/>-->
        <ImageView
            android:id="@+id/tab2_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/close_press"/>

    </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_alignParentRight="true"
        android:background="@android:color/darker_gray"
        android:layout_height="match_parent">
    </View>
</RelativeLayout>