<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="activity_title_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/main_title_height</item>
        <item name="android:background">@color/pictureblue</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/textWrite</item>
    </style>

    <style name="auto_update_item_tv1">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginLeft">5dp</item>
    <item name="android:textColor">@color/text_brack_color</item>
    <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="auto_update_item_tv2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>

    <style name="auto_update_item_cb">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>


    <style name="windowFrame_no_title" parent="@android:style/Theme.DeviceDefault.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    </resources>